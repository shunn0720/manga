            await interaction.followup.send("æŒ‡å®šã—ãŸTHREAD_IDã®ãƒãƒ£ãƒ³ãƒãƒ«ãŒè¦‹ã¤ã‹ã‚Šã¾ã›ã‚“ã§ã—ãŸã€‚", ephemeral=True)
            logger.error("Specified THREAD_ID channel not found.")
            return

        all_messages = []
